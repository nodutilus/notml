{
  "extends": "@nodutilus",
  "env": {
    "browser": true,
    "node": false
  },
  "overrides": [
    {
      "files": [
        "./nyc.config.cjs"
      ],
      "env": {
        "node": true
      }
    },
    {
      "files": [
        "./test/**"
      ],
      "env": {
        "browser": true,
        "node": true
      }
    },
    {
      "files": [
        "./webtest/index.js"
      ],
      "env": {
        "browser": false,
        "node": true
      }
    }
  ],
  "ignorePatterns": [
    "/build/",
    "/core.js",
    "/core-global.js"
  ]
}
